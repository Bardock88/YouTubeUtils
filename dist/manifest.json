{
  "manifest_version": 2,
  "name": "YouTubeUtils",
  "version": "1.0.1",
  "description": "Extra YouTube functionality",
  "permissions": [
    "<all_urls>",
    "cookies",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "icons": {
    "16": "./icons/icon-16.png",
    "32": "./icons/icon-32.png",
    "48": "./icons/icon-48.png",
    "64": "./icons/icon-64.png",
    "128": "./icons/icon-128.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "./icons/icon-32.png",
    "default_popup": "./popup/index.html",
    "default_title": "YouTube Utils"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "run_at": "document_start",
      "all_frames": true,
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "scripts/ytutils.js"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@youtubeutils"
    }
  }
}
